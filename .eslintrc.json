{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "warn",
        "no-fallthrough": "off",
        "no-shadow": "warn",
        "arrow-body-style": ["warn", "as-needed"],
        "arrow-parens": ["warn", "as-needed"],
        "no-var": "error",
        "no-mixed-spaces-and-tabs": [1, "smart-tabs"]
    },
    "globals": {
        "angular": false,
        "describe": false,
        "beforeEach": false,
        "no-debugger": false,
        "it": false,
        "expect": false
    },
    "env": {
        "browser": true,
        "node": true
    }
}
